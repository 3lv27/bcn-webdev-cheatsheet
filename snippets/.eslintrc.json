{
  "extends": "standard",
  "env": {
    "es6": true,
    "node": true
  },
  "globals": {
    "document": false,
    "window": false,
    "console": false
  },
  "rules": {
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-unused-vars": [
      0
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
